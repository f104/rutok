    // Одинаковое расположение кнопки на всех экранах на страницах оформленного заказа
    .container
        ul.dev-menu
            li.dev-menu__item
                a(href="main.html") Главная
            li.dev-menu__item
                a(href="catalog.html") Каталог
            li.dev-menu__item
                a(href="product.html") Товар
            li.dev-menu__item
                a(href="about.html") О нас
            li.dev-menu__item
                a(href="delivery.html") Доставка и оплата
            li.dev-menu__item
                a(href="warranty.html") Гарантия
            li.dev-menu__item
                a(href="contacts.html") Контакты
            li.dev-menu__item
                a(href="cart.html") Корзина
            li.dev-menu__item
                a(href="checkout.html") Оформление заказа
            li.dev-menu__item
                a(href="checkout-success.html") Заказ оформлен
            li.dev-menu__item
                a(href="checkout-error.html") Ошибка оплаты заказа
            li.dev-menu__item
                a(href="cart-empty.html") Пустая корзина
            li.dev-menu__item
                a(href="profile.html") Профиль
            li.dev-menu__item
                a(href="profile-edit.html") Редактировать данные
            li.dev-menu__item
                a(href="orders.html") Мои заказы
            li.dev-menu__item
                a(href="articles.html") Статьи
            li.dev-menu__item
                a(href="article.html") Статья
            li.dev-menu__item
                a(href="404.html") 404
