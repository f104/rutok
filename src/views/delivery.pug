                                        {icon: "icon-delivery-place", text: "с 8:00 до 20:00, без выходных"},
                                    ]
                                )
                    #tab_2.js-tabs__target
                        .r-adds-list.js-scrollbar(data-scrollbar)
                            .js-scrollbar__inner
                                +r-adds(
                                    name="tab-2"
                                    checked=true
                                    title="«Major Express»"
                                    price="от 856"
                                    text="Курьерская служба доставки"
                                    list=[
                                        {icon: "icon-delivery-place", text: "Курьерская доставка до вашей двери"},
                                        {icon: "icon-clock", text: "Срок доставки 3–4 дня"}
                                    ]
                                )
                                +r-adds(
                                    name="tab-2"
                                    checked=false
                                    title="«СДЕК»"
                                    price="от 592"
                                    text="Курьерская служба доставки"
                                    list=[
                                        {icon: "icon-delivery-place", text: "Курьерская доставка до вашей двери"},
                                        {icon: "icon-clock", text: "Срок доставки 5–6 дней"}
                                    ]
                                )
                                +r-adds(
                                    name="tab-2"
                                    checked=false
                                    title="«Boxberry»"
                                    price="от 490"
                                    text="Курьерская служба доставки"
                                    list=[
                                        {icon: "icon-delivery-place", text: "Курьерская доставка до вашей двери"},
